<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_100"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlAccentColor="@color/monsoon"
    app:srlEnablePreviewInEditMode="true"
    app:srlEnableRefresh="false"
    app:srlHeaderHeight="60dp"
    app:srlPrimaryColor="@color/md_grey_100">

    <com.example.mettre.myaprojectandroid.view.ClassicsHeaderM
        android:id="@+id/classicsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_100"
        android:clipToPadding="false"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ima_name_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/information_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:padding="13dp">

                    <ImageView
                        android:id="@+id/icon_img"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/icon_head2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/login_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:drawablePadding="4dp"
                            android:drawableRight="@drawable/turn_right"
                            android:text="登录/注册"
                            android:textColor="@color/oil2"
                            android:textSize="@dimen/normal"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/nice_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:drawablePadding="4dp"
                            android:ellipsize="end"
                            android:maxWidth="150dp"
                            android:singleLine="true"
                            android:textColor="@color/oil2"
                            android:textSize="@dimen/normal"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/nice_name_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="4dp"
                            android:text="个人信息 >"
                            android:textColor="@color/oil2"
                            android:textSize="@dimen/small"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/address_text"
                style="@style/textStyle"
                android:layout_marginTop="10dp"
                android:text="我的地址" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_200"></TextView>

            <TextView
                style="@style/textStyle"
                android:text="我的地址" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_200"></TextView>


            <TextView
                style="@style/textStyle"
                android:text="我的地址" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_200"></TextView>


            <TextView
                android:id="@+id/out_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_gray"
                android:gravity="center_horizontal"
                android:text="退出"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>