<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/md_grey_100"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/goods_main_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_50"
        android:orientation="horizontal"
        android:paddingLeft="6dp">

        <com.example.mettre.myaprojectandroid.view.SquareImageView
            android:id="@+id/product_picture"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="商品名称商品名称商品名陈商品名称商品名陈商品名陈"
                android:textColor="@color/oil2"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/goods_attributeStr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="分类"
                android:textColor="@color/monsoon"
                android:textSize="@dimen/small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="￥45.00"
                    android:textColor="@color/oil3"
                    android:textSize="@dimen/size13" />

                <TextView
                    android:id="@+id/product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="×1"
                    android:textColor="@color/monsoon"
                    android:textSize="@dimen/small" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/total_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="共1件"
                android:textColor="@color/oil"
                android:textSize="@dimen/size13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="应付总额："
                android:textColor="@color/oil"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:text="￥50.00"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/normal" />

            <TextView
                android:id="@+id/freight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text="(含运费0.00元)"
                android:textColor="@color/oil"
                android:textSize="@dimen/small"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/money_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="现金支付："
                android:textColor="@color/oil"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/money_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:text="￥50.00"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/order_btn_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="@drawable/bg_orange_line"
                android:gravity="center"
                android:minWidth="80dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:text="订单跟踪"
                android:textColor="@color/monsoon"
                android:textSize="@dimen/small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/order_btn_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="@drawable/bg_orange_line"
                android:gravity="center"
                android:minWidth="80dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:text="付款"
                android:textColor="@color/monsoon"
                android:textSize="@dimen/small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/order_btn_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dark_red"
                android:gravity="center"
                android:minWidth="80dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:text="确认收货"
                android:textColor="@color/white"
                android:textSize="@dimen/small"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>